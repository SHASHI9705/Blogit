<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head") %>
    <title>Home Page</title>
    <style>
        body {
            background-image: url('../images/back.jpg');
            background-repeat: no-repeat;
            background-size: cover;
            color: #e0e0e0;
            font-family: 'Arial', sans-serif;
        }
        .container {
            padding: 20px;
        }
        .card {
            background-color: rgba(8, 8, 8, 0.755);
            border: none;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(255, 255, 255, 0.2);
        }
        .card:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 20px rgba(255, 255, 255, 0.5);
        }
        .card-img-top {
            border-radius: 10px 10px 0 0;
        }
        .card-title {
            color: #ffffff;
            border: 1px solid #ffffff;
            padding: 5px;
            border-radius: 5px;
            display: -webkit-box;
            -webkit-box-orient: vertical;
            -webkit-line-clamp: 1;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
            margin-bottom: 10px;
            text-align: center;
        }
        .btn-primary {
            background-color: #03a9f4;
            border: none;
            transition: background-color 0.3s ease;
            display: block;
            margin: 0 auto 10px auto; /* Center the button and add margin below */
        }
        .btn-primary:hover {
            background-color: #0288d1;
        }
        .card-body p {
            color: #b0b0b0;
            text-align: center; /* Center the text */
        }
        .row-cols-4 {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
        }
        .col {
            width: calc(25% - 1rem);
            margin-bottom: 20px;
            box-sizing: border-box;
        }
        .navbar-brand {
            display: flex;
            align-items: center;
            font-size: 1.5rem;
            font-weight: bold;
        }
        .navbar-brand img {
            width: 30px;
            height: 30px;
            border-radius: 50%;
            border: 1px solid #fff;
            margin-right: 10px;
        }
        .navbar-nav {
            
            margin-left: auto;
            display: flex;
            align-items: center;
        }
        .nav-link {
            color: #e0e0e0;
            margin-right: 15px;
            transition: color 0.3s ease;
        }
        .nav-link:hover {
            color: #ffffff;
        }
        .footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 20px;
            background-color: #0000008c;
            color: #b0b0b0;
            position: fixed;
            bottom: 0;
            width: 100%;
            height: 2rem;
            font-size: 0.9rem;
            border-top: 1px solid #333;
        }
        .footer .left {
            font-weight: bold;
        }
        .footer .right a {
            color: #b0b0b0;
            margin-left: 15px;
            text-decoration: none;
            transition: color 0.3s ease;
        }
        .footer .right a:hover {
            color: #ffffff;
        }
    </style>
</head>
<body>
    <%- include("./partials/nav") %>
    <div class="container mt-3">
        <div class="row row-cols-4">
            <% blogs.forEach(blog => { %>
                <div class="col">
                    <div class="card">
                        <img src="<%= blog.coverImageURL %>" class="card-img-top" style="height: 9rem;">
                        <div class="card-body">
                            <h5 class="card-title"><%= blog.title.split(' ').slice(0, 3).join(' ') + (blog.title.split(' ').length > 3 ? '...' : '') %></h5>
                            <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
                            <p>Created By: <%= blog.createdBy ? blog.createdBy.fullName : 'Unknown' %></p>
                        </div>
                    </div>
                </div>
            <% }) %>
            <!-- Placeholder columns to preserve layout even with fewer blogs -->
            <% for (let i = blogs.length; i < 4; i++) { %>
                <div class="col"></div>
            <% } %>
        </div>
    </div>
    <div class="footer">
        <div class="left">Developed by: Shashiranjan Singh</div>
        <div class="right">
            <a href="/privacy">Privacy</a>
            <a href="/security">Security</a>
            <a href="/cookies">Cookies</a>
        </div>
    </div>
    <%- include("./partials/scripts") %>
</body>
</html>